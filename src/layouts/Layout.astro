---
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import "@fontsource/space-mono/400.css";
import "@fontsource/space-mono/400-italic.css";
import "@fontsource/space-mono/700.css";
const { title, ogImage, frontmatter } = Astro.props;
const description =
    Astro.props.description ||
    frontmatter?.description ||
    "Worst of Breed - The premier destination for Resume-Driven Development, Over-Engineering, and Resume-Padding.";
---

<html lang="en">
    <head>
        <title>worstofbreed.net - {title || frontmatter?.title}</title>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content={description} />

        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="apple-touch-icon" href="/favicon.svg" />
        <link
            rel="alternate"
            type="application/rss+xml"
            title="Worst of Breed RSS Feed"
            href="/rss.xml"
        />

        <!-- Open Graph / Twitter -->
        <meta
            property="og:title"
            content={`worstofbreed.net - ${title || frontmatter?.title}`}
        />
        <meta property="og:description" content={description} />
        <meta property="og:type" content="website" />
        <meta property="twitter:card" content="summary_large_image" />
        {
            ogImage && (
                <meta
                    property="og:image"
                    content={new URL(ogImage, Astro.site)}
                />
            )
        }
        {
            ogImage && (
                <meta
                    property="twitter:image"
                    content={new URL(ogImage, Astro.site)}
                />
            )
        }
    </head>
    <body>
        <h1>Worst<span style="color:var(--accent)">Of</span>Breed_</h1>

        <NavBar />
        <main>
            <slot />
        </main>
        <Footer />
        <!-- 100% privacy-first analytics -->
        <script
            is:inline={true}
            data-collect-dnt="true"
            async
            src="https://scripts.simpleanalyticscdn.com/latest.js"></script>
        <noscript
            ><img
                src="https://queue.simpleanalyticscdn.com/noscript.gif?collect-dnt=true"
                alt=""
                referrerpolicy="no-referrer-when-downgrade"
            /></noscript
        >
    </body>
    <style>
        body {
            background: var(--bg-color);
            font-family: var(--font-primary);
            padding: var(--spacing-md);
            max-width: 1400px;
            margin: 0 auto;
        }

        @media (min-width: 768px) {
            body {
                padding: var(--spacing-lg);
            }
        }

        h1 {
            text-transform: uppercase;
            font-size: 2rem;
            text-shadow: 4px 4px 0px var(--shadow);
            margin-bottom: var(--spacing-lg);
            word-break: break-word;
        }

        @media (min-width: 768px) {
            h1 {
                font-size: 3rem;
            }
        }

        /* .grid moved to specific pages for better control */
        a {
            color: var(--ink);
            text-decoration: none;
            border-bottom: 2px solid var(--ink);
        }
        a:hover {
            background: var(--accent);
        }
    </style>
</html>
