---
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import "@fontsource/space-mono/400.css";
import "@fontsource/space-mono/400-italic.css";
import "@fontsource/space-mono/700.css";
const { title, ogImage } = Astro.props;
---

<html lang="en">
    <head>
        <title>worstofbreed.net - {title}</title>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="apple-touch-icon" href="/favicon.svg" />

        <!-- Open Graph / Twitter -->
        <meta property="og:title" content={`worstofbreed.net - ${title}`} />
        <meta property="og:type" content="website" />
        <meta property="twitter:card" content="summary_large_image" />
        {
            ogImage && (
                <meta
                    property="og:image"
                    content={new URL(ogImage, Astro.site)}
                />
            )
        }
        {
            ogImage && (
                <meta
                    property="twitter:image"
                    content={new URL(ogImage, Astro.site)}
                />
            )
        }
    </head>
    <body>
        <h1>Worst<span style="color:var(--accent)">Of</span>Breed_</h1>

        <NavBar />
        <slot />
        <Footer />
    </body>
    <style>
        body {
            background: var(--bg-color);
            font-family: var(--font-primary);
            padding: var(--spacing-md);
            max-width: 1400px;
            margin: 0 auto;
        }

        @media (min-width: 768px) {
            body {
                padding: var(--spacing-lg);
            }
        }

        h1 {
            text-transform: uppercase;
            font-size: 2rem;
            text-shadow: 4px 4px 0px var(--shadow);
            margin-bottom: var(--spacing-lg);
            word-break: break-word;
        }

        @media (min-width: 768px) {
            h1 {
                font-size: 3rem;
            }
        }

        /* .grid moved to specific pages for better control */
        a {
            color: var(--ink);
            text-decoration: none;
            border-bottom: 2px solid var(--ink);
        }
        a:hover {
            background: var(--accent);
        }
    </style>
</html>
