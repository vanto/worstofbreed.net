---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Card from "../../components/Card.astro";

export async function getStaticPaths() {
    const cards = await getCollection("patterns");
    return cards.map((entry) => ({
        params: { slug: entry.slug },
        props: { entry },
    }));
}

const { entry } = Astro.props;
const { title, dateAdded, tags, author } = entry.data;
const { Content } = await entry.render();

const formattedDate = dateAdded.toISOString().split("T")[0];

const ogImage = `/og/${entry.slug}.png`;
const description =
    entry.data.specialAbility?.description ||
    entry.data.quote ||
    `Detailed analysis of the ${title} pattern.`;
---

<Layout title={title} ogImage={ogImage} description={description}>
    <div class="detail-container">
        <div class="detail-grid">
            <div class="card-column">
                <Card entry={entry} interactive={false} showContent={false} />
            </div>

            <div class="info-column">
                <div class="analysis-container">
                    <header class="analysis-header">
                        <span>// ANALYSIS_LOG: {title}</span>
                    </header>
                    <div class="analysis-meta">
                        <span>DATE: {formattedDate}</span>
                        <span>TAGS: {tags.join(", ")}</span>
                        {
                            author && (
                                <div class="author-row">
                                    <span>AUTHOR:</span>
                                    <a
                                        href={`https://github.com/${author}`}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="author-link"
                                    >
                                        <img
                                            src={`https://github.com/${author}.png`}
                                            alt={author}
                                            class="author-avatar"
                                        />
                                        @{author}
                                    </a>
                                </div>
                            )
                        }
                    </div>
                    <div class="analysis-content">
                        <Content />
                    </div>
                </div>

                <div class="share-section">
                    <h2>// SHARE_PROTOCOL</h2>
                    <div class="url-box">
                        <label for="share-url" class="sr-only">Share URL</label>
                        <input
                            type="text"
                            readonly
                            value={Astro.url.href}
                            id="share-url"
                            class="url-input"
                        />
                        <button id="copy-btn" class="copy-btn"
                            >COPY COORDINATES</button
                        >
                    </div>
                    <div class="navigation-box">
                        <a href="/patterns" class="back-link"
                            >&lt; RETURN TO PATTERNS</a
                        >
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>

<script>
    const copyBtn = document.getElementById("copy-btn");
    const shareInput = document.getElementById("share-url") as HTMLInputElement;

    copyBtn?.addEventListener("click", async () => {
        try {
            await navigator.clipboard.writeText(shareInput.value);
            const originalText = copyBtn.innerText;
            copyBtn.innerText = "COPIED!";
            setTimeout(() => {
                copyBtn.innerText = originalText;
            }, 2000);
        } catch (err) {
            console.error("Failed to copy: ", err);
        }
    });

    // Select text on click
    shareInput?.addEventListener("click", () => {
        shareInput.select();
    });
</script>

<style>
    .detail-container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        min-height: 80vh;
    }

    .detail-grid {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .card-column {
        width: 100%;
    }

    .info-column {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    @media (min-width: 900px) {
        .detail-grid {
            display: grid;
            grid-template-columns: 350px 1fr;
            gap: 40px;
            align-items: start;
        }

        .detail-container {
            padding: 40px 20px;
        }

        .card-column {
            position: sticky;
            top: 20px;
        }
    }

    .share-section {
        background: var(--ink);
        color: var(--paper);
        padding: 20px;
        border: 2px solid var(--accent);
        width: 100%;
        box-sizing: border-box;
        box-shadow: 8px 8px 0px var(--shadow);
    }

    h2 {
        margin-top: 0;
        font-size: 1.2rem;
        color: var(--accent);
        margin-bottom: 20px;
    }

    .url-box {
        display: flex;
        flex-direction: column;
        gap: 10px;
        margin-bottom: 20px;
    }

    .url-input {
        background: #000;
        color: var(--paper);
        border: 1px solid #555;
        padding: 10px;
        font-family: var(--font-mono);
        width: 100%;
        box-sizing: border-box;
    }

    .copy-btn {
        background: var(--accent);
        color: var(--ink);
        border: none;
        padding: 10px 20px;
        font-weight: bold;
        cursor: pointer;
        font-family: var(--font-mono);
        text-transform: uppercase;
    }

    .copy-btn:hover {
        background: #fff;
    }

    .navigation-box {
        text-align: center;
        border-top: 1px dashed #555;
        padding-top: 15px;
    }
    .back-link {
        color: var(--paper);
        font-family: var(--font-mono);
        text-transform: uppercase;
        font-weight: bold;
        text-decoration: none;
        font-size: 0.9rem;
    }
    .back-link:hover {
        color: var(--accent);
        background: transparent;
        text-decoration: underline;
    }

    /* Analysis Content Styling */
    .analysis-container {
        width: 100%;
        background: var(--paper);
        border: 4px solid var(--ink);
        box-shadow: 8px 8px 0px var(--shadow);
        box-sizing: border-box;
    }

    .analysis-header {
        background: var(--ink);
        color: var(--paper);
        padding: 10px 20px;
        font-family: var(--font-mono);
        font-weight: bold;
        text-transform: uppercase;
    }

    .analysis-meta {
        padding: 10px 20px;
        background: #f0f0f0;
        border-bottom: 2px solid var(--ink);
        font-family: var(--font-mono);
        font-size: 0.8rem;
        display: flex;
        flex-direction: column;
        gap: 5px;
    }

    /* Author Styles */
    .author-row {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .author-link {
        display: flex;
        align-items: center;
        gap: 6px;
        text-decoration: none;
        color: var(--ink);
        font-weight: bold;
    }

    .author-link:hover {
        text-decoration: underline;
        color: var(--accent);
    }

    .author-avatar {
        width: 20px;
        height: 20px;
        border-radius: 50%;
        border: 1px solid var(--ink);
    }

    .analysis-content {
        padding: 30px;
        font-family: var(--font-mono);
        line-height: 1.6;
        font-size: 1rem;
    }

    .analysis-content :global(h2),
    .analysis-content :global(h3) {
        font-family: var(--font-primary);
        text-transform: uppercase;
        margin-bottom: 0.5em;
        border-bottom: 2px solid var(--accent);
        display: inline-block;
    }

    .analysis-content :global(p) {
        margin-bottom: 1.2em;
    }
    .analysis-content :global(ul) {
        margin-bottom: 1.2em;
        padding-left: 1.5em;
    }
    .analysis-content :global(li) {
        margin-bottom: 0.5em;
    }
    .analysis-content :global(strong) {
        color: var(--ink);
        background: rgba(255, 255, 0, 0.2); /* Highlight marker effect */
    }
</style>
